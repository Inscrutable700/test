@model List<test.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<ul>
    @foreach(var user in Model)
    {
        <li>@user.ID - <a href="@Url.Action("Get", "User", new { id = user.ID})">@user.Name</a></li>
    }
</ul>